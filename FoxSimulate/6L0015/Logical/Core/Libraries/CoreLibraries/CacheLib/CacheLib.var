	ArticleIDLength : USINT := 24; (*Length of a Article ID string in HangerASCII24_Type*)
	ArticleNameLength : USINT := 30; (*Length of a Article Name string in HangerASCII24_Type*)
	CustomerNameLength : USINT := 30; (*Length of a Customer Name string in HangerASCII24_Type*)
	IDLength : USINT := 24; (*Length of a hanger or garment ID string*)
	InfoTextLength : USINT := 40; (*Length of an Info Text string in HangerASCII24_Type*)
	EmployeeIDLength : USINT := 24; (*Length of a Employee ID string in HangerASCII24_Type*)
	EmployeeNameLength : USINT := 30; (*Length of a Employee Name string in HangerASCII24_Type*)
